                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group" id="implement-plate">
                                <label class="control-label" for="ImplementPlate"> Placa <span class="text-danger">*</span></label>
                                <input type="text" id="ImplementPlate" class="form-control text-uppercase" maxlength="8" required>
                            </div>

                            <div class="form-group" id="implement-brand-id">
                                <label class="control-label" for="ImplementBrandId"> Marca <span class="text-danger">*</span></label>
                                <select class="form-control select2" id="ImplementBrandId" required></select>
                            </div>

                            <div class="form-group" id="implement-model-id">
                                <label class="control-label" for="ImplementModelId"> Modelo <span class="text-danger">*</span></label>
                                <select class="form-control select2" id="ImplementModelId" required></select>
                            </div>

                            <div class="form-group" id="implement-type-id">
                                <label class="control-label" for="ImplementTypeId"> Tipo <span class="text-danger">*</span></label>
                                <select class="form-control select2" id="ImplementTypeId" required></select>
                            </div>

                            <div class="form-group" id="implement-floor-type-id">
                                <label class="control-label" for="ImplementFloorTypeId"> Tipo de Piso <span class="text-danger">*</span></label>
                                <select class="form-control select2" id="ImplementFloorTypeId" required></select>
                            </div>

                            <div class="form-group" id="implement-year">
                                <label class="control-label" for="ImplementYear"> Ano <span class="text-danger">*</span></label>
                                <input type="number" id="ImplementYear" class="form-control text-uppercase" maxlength="4" required>
                            </div>

                            <div class="form-group" id="implement-value">
                                <label class="control-label">Valor</label>
                                <div class="input-group">
                                    <div class="input-group-btn input-group-append">
                                        <span id="span-residual" class="input-group-text">R$</span>
                                    </div>
                                    <input id="ImplementValue" type="text" data-toggle="input-mask" data-mask-format="#.##0,00" data-reverse="true" class="form-control" data-symbol="R$ " value="0" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Cancelar</button>
                    <button type="button" id="btn-save-implement" class="btn btn-primary waves-effect waves-light mr-1">Salvar</button>
                </div>
            </div>
